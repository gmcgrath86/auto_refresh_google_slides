# URL input (pick one approach)
# 1) Recommended: set source edit URL and let runner derive presenter URL.
SLIDES_SOURCE_URL="https://docs.google.com/presentation/d/REPLACE_WITH_ID/edit?slide=id.p#slide=id.p"

# 2) Optional: set presenter URL directly.
# SLIDES_PRESENT_URL="https://docs.google.com/presentation/d/REPLACE_WITH_ID/present?slide=id.p"

# 3) Optional: provide a fixed notes URL if you don't want shortcut-generated notes.
# SLIDES_NOTES_URL="https://docs.google.com/presentation/d/REPLACE_WITH_ID/present?slide=id.p&presenter=true"

# Optional
CHROME_APP="Google Chrome"
CHROME_PROFILE="Default"

# Bounds format: left,top,right,bottom
# Example below assumes two 1920x1080 displays arranged side-by-side.
PRIMARY_BOUNDS="0,25,1920,1080"
NOTES_BOUNDS="1920,25,3840,1080"

FULLSCREEN_PRIMARY=1
FULLSCREEN_NOTES=1
EXIT_EXISTING_FULLSCREEN=1
CLOSE_EXISTING_PRESENTATION_WINDOWS=1
LAUNCH_FROM_EDIT_MODE=0
KEEP_SOURCE_TAB_OPEN=1
CLOSE_EXISTING_WINDOWS=0
CACHE_BUST=1
AUTO_CAPTURE_FRONT_TAB=1
USE_PRESENTER_NOTES_SHORTCUT=1
LAUNCH_DELAY_SECONDS=0.7
PRESENTER_READY_DELAY_SECONDS=2.2
NOTES_SHORTCUT_RETRY_INTERVAL_SECONDS=0.35
WINDOW_WAIT_TIMEOUT_SECONDS=25
